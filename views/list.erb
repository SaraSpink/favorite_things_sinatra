<h2>List of favorite things</h2>

<% @list.each do |item| %>
  <h4><a href="/items/<%= item.id %>"><%= item.name %> <%= item.rank %></a></h4>
<% end %>

<h4>Add an item to the list and rank it by how much you like it:</h4>

<form action="/" method="post">
  <div class="form-group">
    <label for="name">thing</label>
    <input id="name" name="name" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="rank">rank</label>
    <input id="rank" name="rank" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>
